    <property>
      <code>define('diagramViewer', ['jquery', 'draw.io.viewer'], function($) {
  var getOrigin = function() {
    var origin = window.location.origin;
    if (!origin) {
      var href = window.location.href;
      var hostStart = href.indexOf('://') + 3;
      var pathStart = href.indexOf('/', hostStart);
      origin = pathStart &lt; 0 ? (href + '/') : href.substring(0, pathStart + 1);
    } else {
      origin += '/';
    }
    return origin;
  };

  // This is required for the clipart images.
  GraphViewer.prototype.imageBaseUrl = getOrigin();

  $.fn.viewDiagram = function(options) {
    options = $.extend({
      lightbox: false
    }, options);
    return this.each(function() {
      var xmlDoc = getDiagramFromURL();
      if (null === xmlDoc) {
        var xmlDoc = mxUtils.parseXml($(this).data('model'));
      }
      var graphViewer = new GraphViewer(this, xmlDoc.documentElement, options);
      graphViewer.fitGraph();
    }).removeClass('loading');
  };

  var diagramViewerDeferred = $.Deferred();
  // Load the default theme. The theme controls how the shapes are rendered.
  mxUtils.get(STYLE_PATH + '/default.xml', function(response) {
    // Configures the default viewer theme.
    Graph.prototype.defaultThemes = Graph.prototype.defaultThemes || {};
    Graph.prototype.defaultThemes[Graph.prototype.defaultThemeName] = response.getDocumentElement();
    diagramViewerDeferred.resolve();
  }, function() {
    // Failed to load the theme.
    diagramViewerDeferred.reject();
  });

  function getDiagramFromURL() {
    if (window.location.hash !== '') {
      // We need to exlude first 2 letters from hash (#R)
      let decodedData = decodeURIComponent(window.location.hash.substring(2));
      var graph = new Graph();
      let decompressed = graph.decompress(decodedData);
      var xmlDoc = mxUtils.parseXml(decompressed);
      return xmlDoc;
    }
    return null;
  };

  return diagramViewerDeferred.promise();
});</code>
